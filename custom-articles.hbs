{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#post}}
<header class="page-head page-head-articles">
    <h1 class="page-head-title">{{title}}</h1>
    <p class="page-head-description">{{content}}</p>
</header>

<div class="post-content-article-posts post-content-article-with-featured">
    {{#get "posts" filter="tags:article" order="featured desc"}}
    {{#foreach posts}}
        {{!-- The tag below includes the markup for each post - partials/post-card-article.hbs --}}
        {{> "post-card-article"}}

    {{/foreach}}
    {{/get}}
</div>
{{/post}}


